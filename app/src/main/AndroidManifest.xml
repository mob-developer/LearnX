            android:theme="@style/Theme.learnX.NoActionBar" />
        <activity
            android:name=".Home"
            android:screenOrientation="portrait" />
        <activity
            android:name=".loading.Loading2"
            android:screenOrientation="portrait" />
        <activity
            android:name=".loading.Loading1"
            android:screenOrientation="portrait">
